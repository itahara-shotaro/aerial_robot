  <!-- <!-\- battery -\-> -->
  <!-- <xacro:extra_module name = "battery" parent = "main_body" visible = "1" model_url = "package://mini_quadrotor/urdf/mesh/turnigy_3S_2200mAh.dae" > -->
  <!--   <origin xyz="0.0105 0 -0.012" rpy="0 0 0"/> -->
