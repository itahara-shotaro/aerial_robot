  <!-- propellers -->
  <xacro:propeller_module id = "1" x = "${-rotor_x}" y = "${-rotor_y}" z = "${rotor_z}" direction = "1" tilt = "${-rotor_tilt}" par_link = "main_body1"/>
  <xacro:propeller_module id = "2" x = "${rotor_x}" y = "${-rotor_y}" z = "${rotor_z}" direction = "-1" tilt = "${-rotor_tilt}" par_link = "main_body1"/>
  <xacro:propeller_module id = "3" x = "${rotor_x}" y = "${rotor_y}" z = "${rotor_z}" direction = "1" tilt = "${rotor_tilt}" par_link = "main_body1"/>
  <xacro:propeller_module id = "4" x = "${-rotor_x}" y = "${rotor_y}" z = "${rotor_z}"  direction = "-1" tilt = "${rotor_tilt}" par_link = "main_body1"/>
  <xacro:propeller_module id = "5" x = "${-rotor_x}" y = "${-rotor_y}" z = "${rotor_z}" direction = "1" tilt = "${-rotor_tilt}" par_link = "main_body2"/>
  <xacro:propeller_module id = "6" x = "${rotor_x}" y = "${-rotor_y}" z = "${rotor_z}" direction = "-1" tilt = "${-rotor_tilt}" par_link = "main_body2"/>
  <xacro:propeller_module id = "7" x = "${rotor_x}" y = "${rotor_y}" z = "${rotor_z}" direction = "1" tilt = "${rotor_tilt}" par_link = "main_body2"/>
  <xacro:propeller_module id = "8" x = "${-rotor_x}" y = "${rotor_y}" z = "${rotor_z}"  direction = "-1" tilt = "${rotor_tilt}" par_link = "main_body2"/>


